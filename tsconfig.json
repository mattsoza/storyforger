{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "module": "commonjs",
    "typeRoots": ["./node_modules/@types", "./src/types"],
  },
  "vueCompilerOptions": {
    "target": 2.7
    // "target": 2, // For Vue version <= 2.6.14
  },
  "files": [
    "./client/App.vue"
  ],
  "include": [
    "./src/*.ts",
    "./src/*.vue",
    "./src/*.ext"
  ]
}
